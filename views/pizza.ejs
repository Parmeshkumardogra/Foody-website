<html>
    <head>
        <link rel="stylesheet" href="/css/styles.css">
    </head>
    <body>
       <% for(let i=0;i<list.length;i++){ %>
        <div class="pizza-inline">
            <img class="size-of-pizza" src="/images/pizza/img<%= String(list[i]._id) %>.jpg" >
            <p><%= list[i].name %></p>
            <p>
               Rs <%= list[i].price %>
            </p>
            <form action="/orderplacing" method="post">
               <input type="text" class="editing-input" name="order_name" value="<%= list[i].name %>">
               <input type="text" class="editing-input" name="order_price" value="<%= list[i].price %>">
                <button type="submit">BUY</button>
            </form>
        </div>
       <% } %>
       
    </body>
</html>